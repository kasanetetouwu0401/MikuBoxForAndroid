<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:clipToPadding="false"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:minHeight="?android:listPreferredItemHeightSmall"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:layout_marginBottom="16.0dip"
        android:layout_marginStart="8.0dip"
        android:layout_marginEnd="8.0dip">
        <LinearLayout
            android:background="@drawable/uwu_bg_icon"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_marginStart="8.0dip"
            android:backgroundTint="?attr/colorPrimary">
            <androidx.preference.internal.PreferenceImageView
                android:gravity="center"
                android:id="@android:id/icon"
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_marginTop="10.0dip"
                android:tint="?android:textColorPrimaryInverse"
                android:layout_marginStart="10.0dip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:paddingTop="16.0dip"
        android:paddingBottom="16.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_marginStart="8.0dip"
        android:layout_marginEnd="8.0dip">
        <Spinner
            android:id="@+id/spinner"
            android:visibility="invisible"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.0" />
        <TextView
            android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
            android:textSize="17.0sp"
            android:textColor="?android:textColorPrimary"
            android:ellipsize="marquee"
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false" />
        <TextView
            android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleSmall"
            android:textSize="14.0sp"
            android:textColor="?android:textColorSecondary"
            android:ellipsize="marquee"
            android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_below="@android:id/title"
            android:layout_alignStart="@android:id/title" />
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:layout_marginBottom="16.0dip"
        android:layout_marginStart="8.0dip"
        android:layout_marginEnd="16.0dip">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="28.0dip"
            android:layout_height="28.0dip"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHighest"
            app:cardCornerRadius="99.0dip"
            app:cardElevation="0.0dip"
            app:strokeWidth="0.0dip">
            <ImageView
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_marginTop="1.0dip"
                android:src="@drawable/uwu_arrow"
                android:tint="?attr/colorOnSurfaceVariant"
                android:layout_marginStart="2.0dip" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>
